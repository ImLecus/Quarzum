/**
 *  std.qz - Quarzum standard library
 *
*/

// Prints a message in stdout. By default, ends with a new line ('\n').
foreign function out(const string message, const char separator = '\n');

// Reads a message from stdin. Can be combined with a previous message.
foreign string input(const string message = "");

// Returns the length of a string.
foreign uint64 len(const string message);

// Finishes the execution with an error code. 
foreign function exit(uint8 errorCode);